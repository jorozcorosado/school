#include <iostream>
#include <fstream>
using namespace std;


struct data
{
    int c;
    int e;
};

struct node
{
    data i;
    node *next;
    
};

class list
{
    node *head, *tail;
public:
    list()
    {
        head=NULL;
        tail=NULL;
    }
    void create(data value)
    {
        node *temp=new node;
        temp->i=value;
        temp->next=NULL;
        if(head==NULL)
        {
            head=temp;
            tail=temp;
            temp=NULL;
        }
        else
        {
            tail->next=temp;
            tail=temp;
        }
    }
    node * gethead()
    {
        return head;
    }
    void display(ofstream &fout)
    {
        node *temp=new node;
        temp=head;
        cout << endl;
        while(temp!=NULL)
        {
            if(temp->i.c>0)
            {
                fout<<temp->i.c<<"X^"<<temp->i.e<<"  ";
                temp=temp->next;
            }
            else
            {
                temp=temp->next;
            }
        }
        cout << endl;
    }
    
    list add(list b)
    {
        node *temp=new node;
        temp = head;
        int count2,a=0;
        int count=0;
        list addition;
        while(temp!=NULL)
        {
            if (temp->i.c==0)
            {
                temp = temp -> next;
            }
            else
            {
                temp=temp -> next;
                count++;
            }
        }
        count2 = b.count();
        data poly[count + count2];
        temp=head;
        while(temp!=NULL)
        {
            if(temp->i.c==0)
            {
                temp=temp->next;
            }
            else
            {
                poly[a] = temp->i;
                temp=temp->next;
                a++;
            }
        }
        temp=b.gethead();
        while(temp!=NULL)
        {
            if(temp->i.c==0)
            {
                temp=temp->next;
            }
            else
            {
                poly[a] = temp->i;
                temp=temp->next;
                a++;
            }
        }
        data t;
        for (int i=0 ; i<(count+count2)-1 ; i++)
        {
            for (int j = i+ 1 ; j< (count+count2)  ; j++)
            {
                if(poly[i].e>poly[j].e)
                {
                    t = poly[j];
                    poly[j] = poly[i];
                    poly[i]=t;
                };
            }
        }
        data add[count+count2];
        int sum;
        int y= 0;
        for (int i=0; i<count+count2 ;)
        {
            int n = i+1;
            int addcount = 1;
            sum = poly[i].c;
            while( poly[i].e == poly[n].e)
            {
                sum = sum + poly[n].c;
                n++;
                addcount++;
            };
            add[y].c = sum;
            add[y].e = poly[i].e;
            i=i+addcount;
            y++;
        };
        for(int a=0;a<y; a++)
        {
            addition.create(add[a]);
        }
        return addition;
    }
    
    int count()
    {
        node *temp=new node;
        int count=0;
        temp=head;
        while(temp!=NULL)
        {
            if (temp->i.c==0)
            {
                temp = temp -> next;
            }
            else
            {
                temp=temp -> next;
                count++;
            }
        }
        return count;
    }
};




int main(int argc, const char * argv[]) {
    list list,list2,sum;
    int a,b;
    ifstream fin;
    ofstream fout;
    fin.open("indata.txt");
    fout.open("outdata.txt");
    int t,t2;
    fin >> t;
    for (int i=0; i < t ; i++)
    {
        data polyi;
        fin >> a ;
        fin >> b ;
        polyi.c = a;
        polyi.e = b;
        list.create(polyi);
    };
    fin >> t2;
    for (int i=0; i < t2 ; i++)
    {
        data polyi;
        fin >> a>>b;
        polyi.c = a;
        polyi.e = b;
        list2.create(polyi);
    };
    sum = list.add(list2);
    list.display(fout);
    fout << "+  ";
    list2.display(fout);
    fout << endl << "Equals:" << endl;
    sum.display(fout);
    fin.close();
    fout.close();
    return 0;
}
